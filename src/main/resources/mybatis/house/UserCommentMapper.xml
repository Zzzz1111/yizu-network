<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.huzijun.yizunetwork.core.house.mapper.UserCommentMapper">

	<!-- 通用查询映射结果 -->
	<resultMap id="BaseResultMap" type="com.huzijun.yizunetwork.core.house.entity.UserComment">
		<id column="u_c_id" property="uCId" />
		<result column="u_id" property="uId" />
		<result column="h_comment" property="hComment" />
		<result column="my_comment" property="myComment" />
	</resultMap>



    <sql id="entityWrapperJoin">
    	<if test="ew != null">
    		<if test="ew.entity != null">
    			<where>
        			<if test="ew.entity.uCId!=null">
						AND a.u_c_id=#{ew.entity.uCId}
					</if>
        			<if test="ew.entity.uId!=null">
						AND a.u_id=#{ew.entity.uId}
					</if>
        			<if test="ew.entity.hComment!=null">
						AND a.h_comment=#{ew.entity.hComment}
					</if>
        			<if test="ew.entity.myComment!=null and ew.entity.myComment!=''">
						AND a.my_comment=#{ew.entity.myComment}
					</if>
                    <if test="ew.entity.delFlag!=null and ew.entity.delFlag!=''">
                        AND a.del_flag=#{ew.entity.delFlag}
                    </if>
				</where>
			</if>
			<if test="ew.sqlSegment != null">
				${ew.sqlSegment}
			</if>
		</if>
	</sql>
</mapper>
